@font-face
  font-family: "Victor Mono"
  src: url("https://raw.githubusercontent.com/rubjo/victor-mono/master/dist/woff2/VictorMono-Regular.woff2") format("woff2"),
       url("https://raw.githubusercontent.com/rubjo/victor-mono/master/dist/woff/VictorMono-Regular.woff") format("woff")

  font-weight: 400
  font-style: normal

@font-face
  font-family: "Victor Mono"
  src: url("https://raw.githubusercontent.com/rubjo/victor-mono/master/dist/woff2/VictorMono-Italic.woff2") format("woff2"),
       url("https://raw.githubusercontent.com/rubjo/victor-mono/master/dist/woff/VictorMono-Italic.woff") format("woff")

  font-weight: 400
  font-style: italic

@font-face
  font-family: "Victor Mono"
  src: url("https://raw.githubusercontent.com/rubjo/victor-mono/master/dist/woff2/VictorMono-Bold.woff2") format("woff2"),
       url("https://raw.githubusercontent.com/rubjo/victor-mono/master/dist/woff/VictorMono-Bold.woff") format("woff")

  font-weight: 700
  font-style: normal

@font-face
  font-family: "Victor Mono"
  src: url("https://raw.githubusercontent.com/rubjo/victor-mono/master/dist/woff2/VictorMono-BoldItalic.woff2") format("woff2"),
       url("https://raw.githubusercontent.com/rubjo/victor-mono/master/dist/woff/VictorMono-BoldItalic.woff") format("woff")

  font-weight: 700
  font-style: italic

$accentColorDark = lighten(saturate($accentColor, -60%), 70%)

:root
  --color-accent: $accentColor
  --color-accent-transparent-10: rgba($accentColor, 0.10)
  --color-accent-transparent-70: rgba($accentColor, 0.70)
  --color-accent-darken-10: darken($accentColor, 10%)
  --color-accent-darken-20: darken($accentColor, 20%)
  --color-accent-darken-30: darken($accentColor, 30%)
  --color-accent-darken-70: darken($accentColor, 70%)
  --dark-accent: var(--color-accent-darken-10)
  --color-text: var(--color-accent-darken-70)
  --back-container-background: #fcfcfc
  --front-container-background: #ffffff

  &.dark-mode
    --color-accent: $accentColorDark
    --color-accent-transparent-10: rgba($accentColorDark, 0.10)
    --color-accent-transparent-70: rgba($accentColorDark, 0.70)
    --color-accent-darken-10: lighten($accentColorDark, 10%)
    --color-accent-darken-20: lighten($accentColorDark, 20%)
    --color-accent-darken-30: lighten($accentColorDark, 30%)
    --color-accent-darken-70: lighten($accentColorDark, 70%)
    --dark-accent: var(--color-accent-darken-10)
    --color-text: var(--color-accent-darken-70)
    --back-container-background: #000000
    --front-container-background: #181818

  --default-font-list: "Lora", "Noto Serif SC", "STSongti-SC-Regular", serif
  --mono-font-list: "Victor Mono", Monaco, Menlo, "Source Code Pro", monospace
  --sans-preferred-font-list: "Montserrat", "Roboto", "Source Sans Pro", "Helvetica", "Arial", var(--default-font-list)
  --side-container-width: 25%
  --extra-container-width: 64px
  --stream-container-max-width: 1480px
  --nav-title-size: 30px
  --nav-subtitle-size: 18px
  --nav-link-size: 20px
  --nav-footer-size: 12px
  --post-title-size: 30px
  --post-summary-size: 16px
  --post-body-size: 16px
  --post-meta-size: 16px
  --tag-category-title-size: 22px
  --toc-size: 16px
  --single-column-drawer-width: 260px
  --single-column-nav-title-size: 28px
  --single-column-nav-subtitle-size: 20px
  --single-column-nav-link-size: 18px
  --single-column-nav-footer-size: 13px
  --single-column-post-title-size: 22px
  --single-column-post-summary-size: 16px
  --single-column-post-body-size: 16px
  --single-column-post-meta-size: 14px
  --single-column-tag-category-title-size: 14px
  --single-column-toc-size: 14px
  --h1: 30px
  --h2: 27px
  --h3: 24px
  --h4: 21px
  --h5: 18px
  --h6: 15px

::-webkit-scrollbar
  display: none

::selection
  background: var(--color-accent-transparent-10)

code[class*=language-]::-moz-selection,
code[class*=language-] ::-moz-selection,
pre[class*=language-]::-moz-selection,
pre[class*=language-] ::-moz-selection
  background: var(--color-accent-transparent-10)

code[class*=language-]::selection,
code[class*=language-] ::selection,
pre[class*=language-]::selection,
pre[class*=language-] ::selection
  background: var(--color-accent-transparent-10)

html, body
  background: var(--back-container-background)

body
  padding: 0
  margin: 0
  font-family: var(--default-font-list)
  text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.004)
  text-rendering: optimizeLegibility !important
  -webkit-font-smoothing: antialiased !important
  color: var(--color-text)

*
  color: var(--color-accent-darken-70)
  line-height: 1.75em
  word-wrap: break-word

h1
  font-size: var(--h1)

h2
  font-size: var(--h2)

h3
  font-size: var(--h3)

h4
  font-size: var(--h4)

h5
  font-size: var(--h5)

h6
  font-size: var(--h6)

textarea,
select,
input,
button
  outline: none !important

button
  cursor: hand
  cursor: pointer

code
  color: var(--dark-accent)
  background: var(--color-accent-transparent-10) !important
  padding: 2px 5px
  border-radius: 3px
  font-family: var(--mono-font-list)

pre
  background: var(--color-accent-transparent-10) !important
  color: var(--dark-accent)
  padding: 12px 15px
  border-radius: 5px
  font-family: var(--mono-font-list)
  *
    background: none !important
    font-family: var(--mono-font-list) !important

  code
    padding: 0
    font-size: 15px
    line-height: 1.5em

blockquote
  padding: 10px 20px
  border-left: 3px solid var(--color-accent-transparent-70)
  color: var(--dark-accent)
  background: var(--color-accent-transparent-10)
  p
    margin-bottom: 0

  *
    color: var(--dark-accent)

ul
  padding: 0

a
  color: var(--color-accent)
  &:hover
    color: var(--color-accent-darken-10)
    text-underline-position: under

  @media screen and (max-width: 800px)
    &:hover
      text-decoration: none !important

.a-block
  display: block
  text-decoration: none !important
  &:hover
    text-decoration: none !important

.no-margin
  margin: 0

.no-padding
  padding: 0

.no-overflow
  overflow: hidden !important

.animated-visibility
  visibility: visible
  opacity: 1

.invisible
  visibility: hidden
  opacity: 0

// dirty hack for livere
#lv-container
  padding: 0 30px
  @media screen and (max-width: 800px)
    padding: 0 15px

.single-column-nav-container
  display: none !important
  @media screen and (max-width: 800px)
    display: block !important
    padding: 0
    button
      padding: 0

    .nav-content
      padding: 12px 20px
      justify-content: flex-start
      max-width: unset !important

    .navbar-brand
      color: var(--color-text) !important
      font-family: var(--sans-preferred-font-list)
      text-align: left
      padding-left: 24px !important

    .nav-dropdown-toggle
      display: flex
      align-content: center
      align-items: center
      justify-items: center
      justify-content: center
      background: none !important
      border: none
      padding-top: 1px

    .nav-icon-group
      z-index: 5
      padding-right: 5px
      ul
        list-style: none
        margin: 0
        padding: 0

      li
        display: inline
        margin: 0
        padding: 0

    .nav-icon
      padding: 8px

    .nav-background
      opacity: 0
      z-index: -1
      left: 0
      position: absolute
      width: 100%
      height: 100%
      background: var(--back-container-background)
      -webkit-box-shadow: 0 1px 1px rgba(0, 0, 0, 0.2)
      -moz-box-shadow: 0 1px 1px rgba(0, 0, 0, 0.2)
      box-shadow: 0 1px 1px rgba(0, 0, 0, 0.2)

.single-column-header-container
  display: none !important
  @media screen and (max-width: 800px)
    display: block !important
    padding: 50px 20px 80px 20px
    transition: padding 0.5s ease-in-out, margin 0.5s ease-in-out
    text-align: center
    *
      font-family: var(--sans-preferred-font-list)
      color: var(--color-accent-darken-70)

    .single-column-header-title
      font-size: var(--single-column-nav-title-size)

    .single-column-header-subtitle
      font-size: var(--single-column-nav-subtitle-size)

.single-column-drawer-container
  display: none !important
  @media screen and (max-width: 800px)
    display: block !important
    position: fixed
    top: 0
    left: 0
    right: 0
    transform: translateY(-100%)
    z-index: 1800
    transition: all 0.3s ease-in-out
    .drawer-content
      background: var(--back-container-background)
      height: 100%
      width: 100%
      padding: 20px 0
      display: flex
      .drawer-menu
        flex-grow: 1
        display: flex
        justify-items: center
        justify-content: center
        flex-direction: column
        .drawer-menu-item
          font-size: var(--single-column-nav-link-size)
          margin-bottom: 10px
          border-right: 2px solid transparent
          padding: 8px 30px 8px 30px
          cursor: hand
          cursor: pointer
          color: var(--color-accent-darken-70)
          &.active
            border-right: 2px solid var(--color-accent)
            background: var(--color-accent-transparent-10)
            color: var(--color-accent-darken-30)

.single-column-drawer-mask
  display: none !important
  @media screen and (max-width: 800px)
    display: block !important
    position: fixed
    top: 0
    bottom: 0
    right: 0
    left: 0
    background: rgba(0, 0, 0, 0.8)
    z-index: 1600

.single-column-drawer-container-active
  transform: translateY(0)
  box-shadow: 0 0 8px rgba(0, 0, 0, 0.2)

.side-container
  position: fixed
  top: 0
  height: 100vh
  width: var(--side-container-width)
  text-align: right
  font-family: var(--sans-preferred-font-list)
  padding: 20px 0 50px 0
  overflow-x: hidden
  overflow-y: hidden
  display: flex
  flex-direction: column
  justify-content: space-between
  .nav-head
    padding: 30px 28px 30px 20px
    cursor: hand
    cursor: pointer
    margin-bottom: 10px
    color: var(--color-accent-darken-70)
    .nav-title
      font-size: var(--nav-title-size)
      line-height: calc(var(--nav-title-size) * 1.4)

    border-right: 2px solid transparent
    .nav-subtitle
      margin-top: 8px
      font-size: var(--nav-subtitle-size)

    &:hover
      border-right: 2px solid var(--color-accent-transparent-70)
      background: var(--color-accent-transparent-10)
      color: var(--color-accent-darken-30)

    &.active
      border-right: 2px solid var(--color-accent)
      background: var(--color-accent-transparent-10)
      color: var(--color-accent-darken-20)

  .nav-link-list
    flex-grow: 1
    .nav-link-item
      font-size: var(--nav-link-size)
      margin-bottom: 10px
      border-right: 2px solid transparent
      padding: 8px 28px 8px 30px
      cursor: hand
      cursor: pointer
      color: var(--color-accent-darken-70)
      &:hover
        border-right: 2px solid var(--color-accent-transparent-70)
        background: var(--color-accent-transparent-10)
        color: var(--color-accent-darken-30)

      &.active
        border-right: 2px solid var(--color-accent)
        background: var(--color-accent-transparent-10)
        color: var(--color-accent-darken-20)

  .nav-footer
    padding: 20px 30px 0 20px
    font-size: var(--nav-footer-size)

  @media screen and (max-width: 800px)
    display: none

.extra-container
  position: fixed
  top: 0
  right: 0
  height: 100vh
  width: var(--extra-container-width)
  text-align: right
  font-family: var(--sans-preferred-font-list)
  overflow-x: hidden
  overflow-y: hidden
  display: flex
  flex-direction: column
  justify-content: flex-end
  padding: 30px 0
  .pagination
    display: flex
    flex-direction: column
    user-select: none

    .pagination-indicator
      display: flex
      flex-direction: column
      align-content: center
      justify-content: center
      align-items: center
      justify-items: center
      width: var(--extra-container-width)
      padding: 15px 0
      font-size: 12px
      font-family: var(--mono-font-list)

    .pagination-action
      display: flex
      flex-direction: column
      align-content: center
      justify-content: center
      align-items: center
      justify-items: center
      width: var(--extra-container-width)
      cursor: hand
      cursor: pointer
      padding: 15px 0
      :not(.pagination-action-icon)
        font-size: 13px
        font-family: var(--mono-font-list)
      
      .pagination-action-icon-small
        font-size: 16px

      &:hover
        text-decoration: none
        *
          color: var(--dark-accent)

  @media screen and (max-width: 800px)
    display: none

.pagination-bar-container
  position: fixed
  top: 0
  right: 0
  height: 100vh
  width: var(--side-container-width)
  text-align: right
  font-family: var(--sans-preferred-font-list)
  padding: 20px 0
  overflow: scroll
  display: flex
  flex-direction: column

.stream-container
  padding-left: var(--side-container-width)
  padding-right: var(--extra-container-width)
  width: 100%
  min-height: 100vh
  max-width: var(--stream-container-max-width)
  @media screen and (max-width: 800px)
    padding: 0
    min-height: unset

  .post-list-container
    width: 100%
    min-height: 100vh
    padding: 20px 0 20px 0
    background: var(--front-container-background)
    box-shadow: 0 0 16px rgba(0, 0, 0, 0.12)
    @media screen and (max-width: 800px)
      min-height: unset
      padding: 0
      box-shadow: 0 0 0 rgba(0, 0, 0, 0.2)

    &,
    > *
      .post-item-wrapper
        cursor: hand
        cursor: pointer
        .post-item
          margin: 0 28px 0 35px
          padding: 30px 0
          display: flex
          flex-direction: row
          align-items: center
          @media screen and (max-width: 800px)
            flex-direction: column-reverse
            margin: 0 0 15px 0
            padding: 0
            box-shadow: 0 0 8px rgba(0, 0, 0, 0.1)
            background: var(--front-container-background)

          .post-item-info-wrapper
            flex-grow: 1
            @media screen and (max-width: 800px)
              width: 100%
              padding: 15px 20px

            .post-item-title
              font-size: var(--post-title-size)
              font-weight: 600
              font-style: normal
              margin-bottom: 10px
              line-height: 1.5em
              @media screen and (max-width: 800px)
                font-size: var(--single-column-post-title-size)
                margin-bottom: 5px

            .post-item-title-small
              font-size: var(--tag-category-title-size)
              margin-bottom: 0
              @media screen and (max-width: 800px)
                font-size: var(--single-column-tag-category-title-size)

            .post-item-summary
              font-size: var(--post-summary-size)
              line-height: 1.5em
              margin-bottom: 10px
              @media screen and (max-width: 800px)
                font-size: var(--single-column-post-summary-size)
                margin-bottom: 5px

            .post-item-meta
              font-size: var(--post-meta-size)
              @media screen and (max-width: 800px)
                font-size: var(--single-column-post-meta-size)

          .post-item-image-wrapper
            margin-left: 20px
            @media screen and (max-width: 800px)
              width: 100%
              margin-left: 0

            .post-item-image
              width: 230px
              height: 120px
              background: no-repeat center
              background-size: cover
              border-radius: 5px
              overflow: hidden
              @media screen and (max-width: 800px)
                width: 100%
                height: 180px
                border-radius: 0

        @media screen and (max-width: 800px)
          .post-item-no-divider
            border-bottom: none !important

          .post-item-no-gaps
            margin: 0
            box-shadow: none

        &:not(.post-item-wrapper-no-hover):hover
          text-decoration: none
          background: rgba(0, 0, 0, 0.03)
          .post-item-title
            text-decoration: underline
            text-decoration-style: 2px solid var(--color-accent)
            text-underline-position: under

          *
            color: var(--dark-accent)

          @media screen and (max-width: 800px)
            .post-item-title
              text-decoration: none !important

      .post-item-wrapper-no-hover
        cursor: unset

      &:not(:last-child)
        .post-item
          border-bottom: 1px solid rgba(128, 128, 128, 0.12)

  .post-list-container-no-background
    @media screen and (max-width: 800px)
      background: none

  .post-list-container-shadow
    @media screen and (max-width: 800px)
      box-shadow: 0 0px 8px rgba(0, 0, 0, 0.1)

  .post-list-footer
    text-align: center
    width: 100%
    opacity: 0.3
    color: var(--color-accent-darken-70)
    font-family: var(--default-font-list)
    font-size: 13px
    padding: 15px

  .post
    padding: 0 0 20px 0
    .post-head-wrapper
      margin-top: -20px
      background: no-repeat center
      background-size: cover
      position: relative
      padding-top: 140px
      @media screen and (max-width: 800px)
        margin-top: 0
        padding-top: 120px

      *
        color: white

      .post-title
        padding: 80px 35px 30px 35px
        font-size: var(--post-title-size)
        font-weight: 600
        font-style: normal
        line-height: 1.5em
        background: -moz-linear-gradient(top, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.75) 100%)
        /* FF3.6-15 */
        background: -webkit-linear-gradient(top, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.75) 100%)
        /* Chrome10-25,Safari5.1-6 */
        background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.75) 100%)
        /* IE6-9 */
        @media screen and (max-width: 800px)
          font-size: var(--single-column-post-title-size)
          padding: 80px 20px 30px 20px

        .post-meta
          margin: 0
          &,
          *
            font-size: 16px

          .material-icons
            vertical-align: middle
            margin-bottom: 3px

          .post-meta-tag + .post-meta-tag::before
            content: ', '

          @media screen and (max-width: 800px)
            &,
            *
              font-size: var(--single-column-post-meta-size)

    .post-head-wrapper-text-only
      padding: 30px 35px 0 35px
      @media screen and (max-width: 800px)
        padding: 30px 20px 0 20px

      .post-title
        font-size: var(--post-title-size)
        font-weight: 600
        font-style: normal
        line-height: 1.5em
        .post-meta
          margin: 0
          &,
          *
            font-size: 16px

          .material-icons
            vertical-align: middle
            margin-bottom: 3px

          .post-meta-tag + .post-meta-tag::before
            content: ', '

          @media screen and (max-width: 800px)
            &,
            *
              font-size: var(--single-column-post-meta-size)

        @media screen and (max-width: 800px)
          font-size: var(--single-column-post-title-size)

    .post-body-wrapper
      padding: 30px 35px 35px 35px
      @media screen and (max-width: 800px)
        padding: 20px 20px 35px 20px

      .post-body
        font-size: var(--post-body-size)
        text-align: justify
        line-height: 1.5em
        overflow: hidden
        *
          word-wrap: break-word

        img, iframe
          max-width: 100%
          border-radius: 5px
          overflow: hidden

        @media screen and (max-width: 800px)
          font-size: var(--single-column-post-body-size)

        .toc
          float: right
          border-radius: 5px
          background: var(--color-accent-transparent-10)
          padding: 30px
          margin-left: 30px
          margin-bottom: 30px
          &,
          *
            font-size: var(--toc-size)

          ul
            list-style: decimal
            padding: 0 0 0 20px
            margin: 0

          @media screen and (max-width: 800px)
            &,
            *
              font-size: var(--single-column-toc-size)

    .post-pagination
      padding: 20px 35px
      width: 100%
      display: flex
      justify-content: space-between
      .newer-posts
        padding-right: 5px
        text-align: left
        width: 50%

      .older-posts
        padding-left: 5px
        text-align: right
        width: 50%

      @media screen and (max-width: 800px)
        padding: 20px 20px

    .post-comment-wrapper
      iframe
        overflow: hidden !important
        box-sizing: content-box
        border-radius: 5px

      padding: 20px 35px
      @media screen and (max-width: 800px)
        padding: 20px 20px

  .pagination
    display: none
    @media screen and (max-width: 800px)
      display: flex !important
      flex-direction: row
      justify-content: center
      &:not(.index-page)
        margin-top: 15px

      .pagination-indicator
        display: flex
        flex-direction: column
        align-content: center
        justify-content: center
        align-items: center
        justify-items: center
        width: var(--extra-container-width)
        padding: 15px 0
        font-size: 12px
        font-family: var(--mono-font-list)

      .pagination-action
        display: flex
        flex-direction: column
        align-content: center
        justify-content: center
        align-items: center
        justify-items: center
        width: var(--extra-container-width)
        cursor: hand
        cursor: pointer
        padding: 15px 0
        :not(.pagination-action-icon)
          font-size: 13px
          font-family: var(--mono-font-list)

        &:hover
          text-decoration: none
          *
            color: var(--dark-accent)

  .single-column-footer
    display: none
    @media screen and (max-width: 800px)
      display: block !important
      text-align: center
      font-size: var(--single-column-nav-footer-size)
      font-family: var(--sans-preferred-font-list)
      padding: 40px 20px 40px 20px

.emoji
  width: 1em
  height: 1em
  margin-bottom: 0.2em

table
  margin: 1.3em auto

table th,
table td
  padding: 8px
  line-height: 1.333333rem
  vertical-align: top
  border-top: 1px solid #ddd
  text-align: left

table th
  font-weight: bold

table thead th
  vertical-align: bottom

table caption+thead tr:first-child th,
table caption+thead tr:first-child td,
table colgroup+thead tr:first-child th,
